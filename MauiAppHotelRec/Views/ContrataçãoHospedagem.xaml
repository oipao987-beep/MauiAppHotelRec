<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotelRec.Views.ContrataçãoHospedagem"
             Title="Contratação de Hospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout Padding="40" Spacing="40">

        <Label Text="Cálculo da Diária"
               FontFamily="Kalam"
               FontAttributes="Bold"
               FontSize="46"
               HorizontalOptions="Center"
               TextColor="{StaticResource Primary}" />

        <!-- CARD Principal -->
        <Frame Padding="20"
               BackgroundColor="White"
               CornerRadius="20"
               HasShadow="True">

            <VerticalStackLayout Spacing="20">

                <!-- Adultos e Crianças -->
                <Grid RowDefinitions="Auto,Auto"
                      ColumnDefinitions="*,Auto,Auto"
                      ColumnSpacing="10">

                    <Label Text="Adultos:" Grid.Row="0" Grid.Column="0"
                           VerticalTextAlignment="Center" />

                    <Label Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"
                           TextColor="{StaticResource Primary}"
                           FontAttributes="Bold"
                           Grid.Row="0" Grid.Column="1"
                           VerticalTextAlignment="Center"/>

                    <Stepper x:Name="stp_adultos"
                             Minimum="0" Maximum="10" Increment="1"
                             Grid.Row="0" Grid.Column="2" />

                    <Label Text="Crianças:" Grid.Row="1" Grid.Column="0"
                           VerticalTextAlignment="Center" />

                    <Label Text="{Binding Value}"
                           BindingContext="{x:Reference stp_criancas}"
                           TextColor="{StaticResource Primary}"
                           FontAttributes="Bold"
                           Grid.Row="1" Grid.Column="1"
                           VerticalTextAlignment="Center"/>

                    <Stepper x:Name="stp_criancas"
                             Minimum="0" Maximum="10" Increment="1"
                             Grid.Row="1" Grid.Column="2" />

                </Grid>

                <!-- Picker -->
                <Frame Padding="15"
                       BackgroundColor="#F8F8F8"
                       CornerRadius="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Escolha sua Suíte"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}"
                               TextTransform="Uppercase"/>
                        <Picker x:Name="pck_quarto"
                                Title="Selecione sua Acomodação" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Datas -->
                <Frame Padding="15"
                       BackgroundColor="#F8F8F8"
                       CornerRadius="15">
                    <VerticalStackLayout Spacing="15">

                        <Label Text="Período da Estadia"
                               FontAttributes="Bold"
                               TextTransform="Uppercase"
                               TextColor="{StaticResource Primary}" />

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Check-in:" />
                            <DatePicker x:Name="dtpck_checkin"
                                        Format="dd/MM/yyyy"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Check-out:" />
                            <DatePicker x:Name="dtpck_checkout"
                                        Format="dd/MM/yyyy"/>
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Frame>

                <Button Text="Avançar"
                        HeightRequest="50"
                        CornerRadius="12"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"/>

                <Button Text="Ir para Nova Página"
                        Clicked="Button_Clicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="30"
                        HeightRequest="55"
                        Margin="0,10"/>

            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
